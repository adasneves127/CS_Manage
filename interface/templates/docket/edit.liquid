<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Record {{docket[0]}}</title>
    <script>
        function add() {
            var name = prompt("Enter the name of the assignee");
            // Check if the name is already in the assignees table
            var table = document.getElementById("assignees");
            for (var i = 0, row; row = table.rows[i]; i++) {
                if (row.cells[0].innerText == name) {
                    alert("This person is already an assignee");
                    return;
                }
            }

            if (name != null) {
                var xhr = new XMLHttpRequest();
                xhr.open("POST", "/docket/officer/assignee/add/", true);
                xhr.setRequestHeader("Content-Type", "application/json");
                let post_data = {
                    "name": name,
                    "docket": {{docket[0]}}
                }
                xhr.send(JSON.stringify(post_data));
                xhr.onreadystatechange = function() {
                    if (xhr.readyState == 4 && xhr.status == 200) {
                        location.reload();
                    }
                }
            }
        }

        function remove(user_seq){
            if (name != null) {
                var xhr = new XMLHttpRequest();
                xhr.open("POST", "/docket/officer/assignee/del/", true);
                xhr.setRequestHeader("Content-Type", "application/json");
                let post_data = {
                    "user": user_seq,
                    "docket": {{docket[0]}}
                }
                xhr.send(JSON.stringify(post_data));
                xhr.onreadystatechange = function() {
                    if (xhr.readyState == 4 && xhr.status == 200) {
                        location.reload();
                    }
                }
            }
        }
    </script>
</head>
<body>
    {% render "navbar.liquid" %}
    <h1>Edit Record {{docket[0]}}</h1>
    <fieldset>
        <legend>Docket Informaion</legend>
        <form action="/docket/officer/new/" method="post">
            <label for="title">Title:</label>
            <input type="text" name="title" id="title"> <br> <br>
            <label for="body">Body:</label> <br>
            <textarea name="body" id="body" cols="40" rows="10"></textarea> <br>
            <label for="status">Status</label>
            <select name="status" id="status">
                {% for stat in statuses %}
                    <option value="{{stat[0]}}">{{stat[1]}}</option>
                {% endfor %}
            </select>
            <input type="submit" value="Submit">
    </form>
    </fieldset>
    <fieldset>
        <legend>Assignees</legend>
        <table id="assignees">
            <tr>
                <th>Name</th>
                <th>Actions</th>
            </tr>
                
        {% for person in assignees %}
            <tr>
                <td>{{person[0]}}</td>
                <td><a onclick="remove({{person[1]}})" class="nav">Remove</a></td>
            </tr>
        {% endfor %}
        <tr>
            <td></td>
            <td><a onclick="add()" class="nav">+</a></td>
        </tr>
        </table>
    </fieldset>
</body>
</html>